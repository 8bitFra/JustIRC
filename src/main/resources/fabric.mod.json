{
  "schemaVersion": 1,
  "id": "justirc",
  "version": "${version}",

  "name": "Just Irc",
  "description": "A minecraft IRC client mod!",
  "authors": [
    "8bitFra"
  ],
  "contact": {
    "homepage": "https://github.com/8bitFra/JustIRC",
    "sources": "https://github.com/8bitFra/JustIRC"
  },

  "license": "MIT License",
  "icon": "assets/justirc/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.just.irc.Main"
    ],
    "client": [
      "net.just.irc.MainClient"
    ]
  },
  "mixins": [
    "justirc.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
