{
  "schemaVersion": 1,
  "id": "justirc",
  "version": "${version}",

  "name": "Just Irc",
  "description": "A minecraft IRC client mod!",
  "authors": [
    "8bitFra"
  ],
  "contact": {
    "homepage": "https://github.com/8bitFra/JustIRC",
    "sources": "https://github.com/8bitFra/JustIRC"
  },

  "license": "MIT License",
  "icon": "assets/justirc/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.just.irc.Main"
    ],
    "client": [
      "net.just.irc.MainClient"
    ],
    "modmenu":[
		"net.just.irc.ModMenuIntegration"
	]
  },
  "mixins": [
    "justirc.mixins.json",
    {
		"config": "justirc.client.mixins.json",
		"environment": "client"
	}
  ],

  "depends": {
    "fabricloader": ">=0.14.23",
    "fabric-api": "*",
    "minecraft": "~1.20.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
